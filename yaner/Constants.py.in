from os.path import join as _join
from xdg.BaseDirectory import xdg_config_home as _config_home

# Paths
#
# Global
_DATA_DIR = "@prefix@/share/yaner"
#ICONDIR = _join(DATADIR, "icons")
#PIXMAPDIR = _join(DATADIR, "images")
_CONFIG_DIR = _join(_DATA_DIR, "config")
_GLADE_DIR = _join(_DATA_DIR, "glade")

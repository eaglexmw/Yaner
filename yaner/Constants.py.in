MAIN_CONFIG_FILE = _join(_CONFIG_DIR, "yaner.conf")
SERVER_CONFIG_FILE = _join(_CONFIG_DIR, "servers.conf")
# User
U_CONFIG_DIR = _join(_config_home, "yaner")
U_MAIN_CONFIG_FILE = _join(U_CONFIG_DIR, "yaner.conf")
U_SERVER_CONFIG_FILE = _join(U_CONFIG_DIR, "servers.conf")

# Task types
#
(
    TASK_NORMAL,
    TASK_BT,
    TASK_METALINK
) = range(3)

# Version
#
VERSION = "@version@"

# Translation
#
import locale as _locale
import gettext as _gettext
_locale.setlocale(_locale.LC_ALL, "")
_gettext.bindtextdomain("iscoder", _DATA_DIR + "/locale")
_gettext.textdomain("iscoder")
_ = _gettext.gettext
